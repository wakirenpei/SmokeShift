<div class="flex flex-col text-white h-screen justify-between border-r border-borderColor fixed top-0 left-0 mt-12 bg-darkBackground z-10">
  <div class="pt-8">
    <!-- 金額サマリー -->
    <div class="px-4 mt-4"> <!-- 両側の余白を4に設定 -->
      <div class="stats stats-vertical w-full bg-cardBackground text-white shadow"> <!-- 幅を100%に設定 -->
        <div class="stat px-3 py-2"> <!-- 内側の余白を調整 -->
          <div class="stat-title text-xs text-gray-400">総喫煙金額</div> <!-- タイトルの色を調整 -->
          <div class="stat-value text-error text-base"> <!-- フォントサイズを調整 -->
            <%= number_to_currency(total_smoking_amount, unit: '¥', precision: 0) %>
          </div>
        </div>
        
        <div class="stat px-3 py-2"> <!-- 内側の余白を調整 -->
          <div class="stat-title text-xs text-gray-400">総節約金額</div> <!-- タイトルの色を調整 -->
          <div class="stat-value text-success text-base"> <!-- フォントサイズを調整 -->
            <%= number_to_currency(total_savings, unit: '¥', precision: 0) %>
          </div>
        </div>
        
        <% difference = smoking_savings_difference %>
        <div class="stat px-3 py-2"> <!-- 内側の余白を調整 -->
          <div class="stat-title text-xs text-gray-400">差額</div> <!-- タイトルの色を調整 -->
          <div class="stat-value text-base <%= difference >= 0 ? 'text-success' : 'text-error' %>"> <!-- フォントサイズを調整 -->
            <%= number_to_currency(difference.abs, unit: '¥', precision: 0) %> 
          </div>
          <div class="stat-desc text-xs text-gray-300"><%= difference >= 0 ? '節約' : '損失' %></div> <!-- 説明文の色を調整 -->
        </div>
      </div>
    </div>

    <!-- 既存のナビゲーション -->
    <div class="px-4 mt-8"> <!-- 両側の余白を調整 -->
      <%= link_to smoker_smoking_records_path, class: "hover:bg-gray-700 py-2 block" do %> <!-- ホバー効果とパディングを追加 -->
        <div class="flex items-center space-x-2"> <!-- アイコンとテキストの間隔を少し狭く調整 -->
          <%= image_tag 'icons-smoking.svg', alt: '喫煙管理アイコン', class: 'w-5 h-5' %> <!-- アイコンサイズを調整 -->
          <span class="text-base font-medium">喫煙管理</span> <!-- フォントサイズと太さを調整 -->
        </div>
      <% end %>
    </div>
    <div class="px-4 mt-2"> <!-- 両側の余白を調整 -->
      <%= link_to smoker_cigarettes_path, class: "hover:bg-gray-700 py-2 block" do %> <!-- ホバー効果とパディングを追加 -->
        <div class="flex items-center space-x-2"> <!-- アイコンとテキストの間隔を少し狭く調整 -->
          <%= image_tag 'icons-cigarettes-pack.svg', alt: 'タバコ登録アイコン', class: 'w-5 h-5' %> <!-- アイコンサイズを調整 -->
          <span class="text-base font-medium">登録</span> <!-- フォントサイズと太さを調整 -->
        </div>
      <% end %>
    </div>
    <div class="px-4 mt-2"> <!-- 両側の余白を調整 -->
      <%= link_to '#', class: "hover:bg-gray-700 py-2 block" do %> <!-- ホバー効果とパディングを追加 -->
        <div class="flex items-center space-x-2"> <!-- アイコンとテキストの間隔を少し狭く調整 -->
          <%= image_tag 'icons-chart.svg', alt: 'グラフアイコン', class: 'w-5 h-5' %> <!-- アイコンサイズを調整 -->
          <span class="text-base font-medium">グラフ</span> <!-- フォントサイズと太さを調整 -->
        </div>
      <% end %>
    </div>
  </div>
</div>