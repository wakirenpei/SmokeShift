<div class="pt-16 flex flex-col items-center justify-center">
  <div class="w-full max-w-2xl mx-auto pt-20">
    <h1 class="text-2xl font-bold text-white mb-10 text-left">ログイン</h1>
    <%= form_with model: @user, local: true do |f| %>
      <div class="mb-8">
        <%= f.label :email, "メールアドレス", class: 'block text-sm font-medium text-labelColor mb-2' %>
        <div class="relative">
          <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-labelColor"></i>
          <%= f.email_field :email, required: true, class: "w-full h-12 text-white border border-borderColor2 rounded-lg bg-customForm pl-10 pr-3 py-2", placeholder: "メールアドレスを入力" %>
        </div>
      </div>
      <div class="mb-6">
        <div class="flex justify-between items-center mb-2">
          <%= f.label :password, "パスワード", class: 'block text-sm font-medium text-labelColor' %>
          <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path , class: "text-sm text-emerald-500 hover:text-emerald-400 transition-colors" %>
        </div>
        <div class="relative">
          <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-labelColor"></i>
          <%= f.password_field :password, required: true, class: "w-full h-12 text-white border border-borderColor2 rounded-lg bg-customForm pl-10 pr-3 py-2", placeholder: "パスワードを入力" %>
        </div>
      </div>
      <div class="flex justify-center mb-6">
        <%= f.submit "ログイン", class: "btn btn-success w-1/2 h-12 text-lg font-medium" %>
      </div>
      <div class="flex items-center justify-center my-6">
        <div class="border-t border-borderColor2 flex-grow"></div>
        <p class="mx-4 text-labelColor">または</p>
        <div class="border-t border-borderColor2 flex-grow"></div>
      </div>
      <div class="flex justify-center">
        <%= link_to auth_at_provider_path(:line) do %>
          <%= image_tag "btn_login_base.png", 
              alt: "LINEでログイン",
              class: "h-12 w-auto"
          %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>