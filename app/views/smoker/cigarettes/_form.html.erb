<%= form_with model: [:smoker, @cigarette], class: "space-y-4", local: true do |form| %>
  <div id="error_messages">
    <%= render 'shared/error_messages', object: @cigarette %>
  </div>

  <div>
    <%= form.label :brand, "銘柄", class: "block text-sm font-medium text-gray-300" %>
    <%= form.text_field :brand, class: "mt-1 block w-full bg-customForm border-gray-600 rounded-md shadow-sm text-gray-100 focus:ring-blue-500 focus:border-blue-500 px-2 py-2" %>
  </div>

  <div>
    <%= form.label :price_per_pack, "1箱の値段", class: "block text-sm font-medium text-gray-300" %>
    <%= form.number_field :price_per_pack, class: "mt-1 block w-full bg-customForm border-gray-600 rounded-md shadow-sm text-gray-100 focus:ring-blue-500 focus:border-blue-500 px-2 py-2" %>
  </div>

  <div>
    <%= form.label :quantity_per_pack, "1箱の本数", class: "block text-sm font-medium text-gray-300" %>
    <%= form.number_field :quantity_per_pack, class: "mt-1 block w-full bg-customForm border-gray-600 rounded-md shadow-sm text-gray-100 focus:ring-blue-500 focus:border-blue-500 px-2 py-2" %>
  </div>

  <div>
    <%= form.submit form.object.new_record? ? "登録" : "更新", class: "w-full px-4 py-2 bg-customGreen text-white rounded hover:bg-customGreenHover transition duration-200" %>
  </div>
<% end %>