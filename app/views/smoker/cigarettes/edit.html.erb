<div class="container mx-auto px-4 py-8 pt-24 ml-32">
  <h1 class="text-3xl font-bold mb-8 flex items-center">
    <i class="fas fa-edit w-8 h-8 mr-3 text-labelColor opacity-50"></i>
    <span class="text-gray-400 hover:text-white transition-colors duration-200">タバコ情報を編集</span>
  </h1>

  <div class="space-y-8">
    <div class="card bg-cardBackground shadow-xl border border-gray-700">
      <div class="card-body p-4">
        <%= render 'form', cigarette: @cigarette %>
        <%= link_to smoker_cigarettes_path, class: "btn btn-ghost mt-4 text-gray-400 hover:text-gray-300 transition-colors duration-200" do %>
          <i class="fas fa-arrow-left mr-2"></i>
          戻る
        <% end %>
      </div>
    </div>
  </div>
</div>