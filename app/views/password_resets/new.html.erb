<div class="pt-16 flex flex-col items-center justify-center">
  <div class="w-full max-w-2xl mx-auto pt-20">
    <h1 class="text-3xl font-bold tracking-tight text-white mb-10 text-left">パスワードリセット</h1>
    <%= form_with url: password_resets_path, local: true do |form| %>
      <div class="mb-8">
        <%= form.label :email, "メールアドレス", class: 'block text-sm font-medium tracking-wide text-labelColor mb-2 uppercase' %>
        <div class="relative">
          <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-labelColor"></i>
          <%= form.email_field :email, 
              required: true, 
              class: "w-full h-12 text-white border border-borderColor2 rounded-lg bg-customForm pl-10 pr-3 py-2 font-light tracking-wide", 
              placeholder: "メールアドレスを入力" %>
        </div>
      </div>
      <div class="flex justify-center mb-6">
        <%= form.submit "パスワードリセットを申請", 
          class: "btn btn-success w-1/2 h-12 text-base font-medium tracking-wide hover:bg-emerald-600 transition-all duration-200" %>
      </div>
      <div class="flex items-center justify-center my-6">
        <div class="border-t border-borderColor2 flex-grow"></div>
        <p class="mx-4 text-labelColor font-light tracking-widest uppercase text-sm">または</p>
        <div class="border-t border-borderColor2 flex-grow"></div>
      </div>
      <div class="flex justify-center">
        <%= link_to "ログインページに戻る", 
            login_path, 
            class: "text-sm text-emerald-500 hover:text-emerald-400 transition-colors tracking-wide hover:underline" %>
      </div>
    <% end %>
  </div>
</div>