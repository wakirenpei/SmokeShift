<div class="pt-16 flex flex-col items-center justify-center">
  <div class="w-full max-w-2xl mx-auto pt-20">
    <h1 class="text-2xl font-bold text-white mb-10 text-left">パスワード再設定</h1>
    
    <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
      <div class="mb-8">
        <%= render 'shared/error_messages', object: f.object %>
      </div>
      
      <div class="mb-6">
        <%= f.label :email, class: 'block text-sm font-medium text-labelColor mb-2' %>
        <p class="text-white"><%= @user.email %></p>
      </div>

      <div class="mb-6">
        <%= f.label :password, "新しいパスワード", class: 'block text-sm font-medium text-labelColor mb-2' %>
        <div class="relative">
          <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-labelColor"></i>
          <%= f.password_field :password, required: true, class: "w-full h-12 text-white border border-borderColor2 rounded-lg bg-customForm pl-10 pr-3 py-2", placeholder: "新しいパスワードを入力" %>
        </div>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: 'block text-sm font-medium text-labelColor mb-2' %>
        <div class="relative">
          <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-labelColor"></i>
          <%= f.password_field :password_confirmation, required: true, class: "w-full h-12 text-white border border-borderColor2 rounded-lg bg-customForm pl-10 pr-3 py-2", placeholder: "新しいパスワードを再入力" %>
        </div>
      </div>

      <div class="flex justify-center mb-6">
        <%= f.submit "パスワードをリセット", class: "btn btn-success w-1/2 h-12 text-lg font-medium" %>
      </div>
    <% end %>
    
    <div class="flex items-center justify-center my-6">
      <div class="border-t border-borderColor2 flex-grow"></div>
      <p class="mx-4 text-labelColor">または</p>
      <div class="border-t border-borderColor2 flex-grow"></div>
    </div>
    <div class="flex justify-center">
      <%= link_to "ログインページに戻る", login_path, class: "text-sm text-emerald-500 hover:text-emerald-400 transition-colors" %>
    </div>
  </div>
</div>