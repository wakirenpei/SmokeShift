<div class="pt-16 flex flex-col items-center justify-center">
  <div class="w-full max-w-2xl mx-auto pt-20">
    <h1 class="text-2xl font-bold text-white mb-10 text-left">新規会員登録</h1>
    <%= form_with model: @user, local: true do |form| %>
      <div class="mb-8">
        <%= form.label :name, "名前", class: 'block text-sm font-medium text-labelColor mb-2' %>
        <%= form.text_field :name, required: true, class: "w-full h-10 text-white border border-borderColor2 rounded-lg bg-customForm px-2 py-2", placeholder: "名前を入力" %>
      </div>
      <div class="mb-8">
        <%= form.label :email, "メールアドレス", class: 'block text-sm font-medium text-labelColor mb-2' %>
        <%= form.email_field :email, required: true, class: "w-full h-10 text-white border border-borderColor2 rounded-lg bg-customForm px-2 py-2", placeholder: "メールアドレスを入力" %>
      </div>
      <div class="mb-8">
        <%= form.label :password, "パスワード", class: 'block text-sm font-medium text-labelColor mb-2' %>
        <%= form.password_field :password, required: true, class: "w-full h-10 text-white border border-borderColor2 rounded-lg bg-customForm px-2 py-2", placeholder: "パスワードを入力" %>
      </div>
      <div class="mb-12">
        <%= form.label :password_confirmation, "パスワード確認", class: 'block text-sm font-medium text-labelColor mb-2' %>
        <%= form.password_field :password_confirmation, required: true, class: "w-full h-10 text-white border border-borderColor2 rounded-lg bg-customForm px-2 py-2" %>
      </div>
      <div class="flex justify-center">
        <%= form.submit "登録", class: "btn btn-active btn-primary w-32" %>
      </div>
    <% end %>
  </div>
</div>